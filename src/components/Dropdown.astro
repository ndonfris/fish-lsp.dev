---
import "tw-base";
import { Icon } from 'astro-icon/components';

---

<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
<div x-data="{ dropdownOpen: false }" class="relative">
  <button @click="dropdownOpen = !dropdownOpen" class="relative z-10 block p-2 bg-[#282a36] rounded-md focus:outline-none">
    <svg class="w-5 h-5 text-purple-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>

  <div x-show="dropdownOpen" @click="dropdownOpen = false" class="fixed z-10 w-full h-full ring-[#5f5fd7]"></div>

  <div x-show="dropdownOpen" class="absolute right-0 z-20 w-48 py-2 mt-2 bg-[#282a36] shadow-lg shadow-black/50 rounded-md ring-[#5f5fd7]">
    <a href="https://github.com/ndonfris/fish-lsp" class="block px-3 py-2 transition-colors hover:bg-gray-800/40 hover:text-purple-600 active:text-purple-600 focused:text-purple-600">
      <Icon name="github" class="inline-block text-purple-400"/>
      github
    </a>
    <hr class="opacity-5"/>
    <a href="https://www.npmjs.com/package/fish-lsp" class="block px-3 py-2 transition-colors hover:bg-gray-800/40 hover:text-purple-600 active:text-purple-600 focused:text-purple-600">
      <Icon name="npm" class="inline-block text-purple-400"/>
      npm
    </a>
    <hr class="opacity-5"/>
    <a href="https://marketplace.visualstudio.com/items?itemName=ndonfris.fish-lsp"
      class="block px-3 py-2 transition-colors hover:bg-gray-800/40 hover:text-purple-600 active:text-purple-600 focused:text-purple-600"
    >
      <Icon name="vscode" class="inline-block text-purple-400"/>
      vscode
    </a>
  </div>
</div>

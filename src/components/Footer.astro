---
import { Icon } from 'astro-icon/components';
import 'tw-base'

const site = {
  title: 'fish-lsp.dev',
  repo: 'https://github.com/ndonfris/fish-lsp.dev',
  srcRepo: 'https://github.com/ndonfris/fish-lsp'
}


---

<!-- <div class="container w-full mx-auto bg-blue-500 h-28"> -->
<div class="w-full py-4 mx-auto bg-blue-500">
  <div class="max-w-2xl px-4 mx-auto">
    <div class="flex flex-col items-center gap-3 md:flex-row md:justify-between">
      <div class="flex flex-wrap justify-center gap-y-1 md:flex-col md:gap-y-2 md:justify-start">
        <a href={`${site.srcRepo}/wiki`} class="font-sans text-sm text-black hover:text-white px-3 border-r border-black/25 md:border-r-0 md:px-0">wiki</a>
        <a href={`${site.srcRepo}/wiki/Sources`} class="font-sans text-sm text-black hover:text-white px-3 border-r border-black/25 md:border-r-0 md:px-0">resources</a>
        <a href={`${site.srcRepo}#features`} class="font-sans text-sm text-black hover:text-white px-3 border-r border-black/25 md:border-r-0 md:px-0">features</a>
        <a href="/playground" class="font-sans text-sm text-black hover:text-white px-3 border-r border-black/25 md:border-r-0 md:px-0">playground</a>
        <a href={`${site.srcRepo}/wiki/Development-Notes`} class="font-sans text-sm text-black hover:text-white px-3 md:px-0">notes</a>
      </div>

      <div class="text-center">
        <a href={site.repo} class="inline-block text-sm text-black hover:text-white">
          <span>
            edit this website
            <Icon name="external-link" class="inline mb-1"/>
          </span>
        </a>
        <p class="text-sm text-black">
          <Icon name="fish-bowl" class="w-8 h-8 mx-auto text-center"/> <a href="#" class="text-sm tracking-tighter underline">{site.title}</a> &copy; <span class="italic font-semibold">2025</span>
        </p>
      </div>
    </div>
  </div>
</div>

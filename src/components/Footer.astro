---
import { Icon } from 'astro-icon/components';
import 'tw-base'

const site = {
  title: 'fish-lsp.dev',
  repo: 'https://github.com/ndonfris/fish-lsp.dev',
  srcRepo: 'https://github.com/ndonfris/fish-lsp'
}


---

<!-- <div class="container w-full mx-auto bg-blue-500 h-28"> -->
<div class="container w-full h-32 mx-auto bg-blue-500 py-auto">
  <div class="container max-w-2xl px-4 mx-auto py-auto">
    <div class="flex flex-col items-center justify-between md:flex-row divide-y-4 divide-transparent md:divide-y-0">
      <div class="flex md:grid w-fit divide-x-4 divide-black divide-dotted md:divide-x-0">
        <div class="text-center md:text-left md:justify-center">
          &nbsp<a href={`${site.srcRepo}/wiki`} class="font-sans text-sm text-black hover:text-white">wiki</a>&nbsp
        </div>
        <div class="text-center md:text-left md:justify-center">
          &nbsp<a href={`${site.srcRepo}/wiki/Sources`} class="font-sans text-sm text-black hover:text-white">resources</a>&nbsp
        </div>
        <div class="text-center md:text-left md:justify-center">
          &nbsp<a href={`${site.srcRepo}#features`} class="font-sans text-sm text-black hover:text-white">features</a>&nbsp
        </div>
        <div class="text-center md:text-left md:justify-center">
          &nbsp<a href={`${site.srcRepo}/wiki/Development-Notes`} class="font-sans text-sm text-black hover:text-white">notes</a>&nbsp
        </div>
      </div>

      <div class="mb-4 text-center">
        <div class="text-center">
          <a href={site.repo} class="inline-block my-auto text-sm text-black hover:text-white">
            <span>
              edit this website
              <Icon name="external-link" class="inline mb-1"/>
            </span>
          </a>
        </div>
        <p class="text-sm text-black bg-blue-500">
          <Icon name="fish-bowl" class="w-8 h-8 mx-auto text-center"/> <a href="#" class="text-sm tracking-tighter underline">{site.title}</a> Â© <span class="italic font-semibold">2025</span>
        </p>
      </div>
    </div>
  </div>
</div>
